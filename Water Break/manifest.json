{
    "manifest_version": 2,
    "name": "Water Break",
    "version": "1.0",
    "description": "An extension to remind you to take a break and drink water",
    "browser_action":{
        "default_popup": "index.html"
    },

    "background":
    {
        "scripts": ["index.js"],
        "persistent": true

    },
    
    "permissions": [
        "tabs",
        "https://*/*",
        "http://*/*"
    ]
}